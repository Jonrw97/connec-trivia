<div class="container">
  <h1><%="Welcome #{current_user.username}"%></h1>
</div>

<div class="container">
  <p><i class="fa-solid fa-trophy"></i></p>
  <%= @score %>/10
  <p><i class="fa-solid fa-heart-pulse"></i></p>
  <%= @lifeline_count %> /3
</div>

<div class="container">
  <h2>Leaderboard</h2>

  <ul>
    <% @users.each do |user| %>
      <li><%= user.username %></li>
      <li><i class="fa-solid fa-trophy"></i> <%= @score = user.choices.count { |choice| choice.correct} %>/10</li>
    <% end %>
  </ul>
</div>

<div class="container">
  <%= link_to "PLAY", root_path%>
</div>
