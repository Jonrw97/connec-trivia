<h1>Questions</h1>

<%= @question.prompt %>
<div data-controller="correct-answers">
  <div data-correct-answers-target="answers"></div>
  <div data-correct-answers-target="answersdiv">
    <%if params[:query].nil? %>
      <%= simple_form_for(@user_choice,
            data: {correct_answers_target: "form",
          action: "submit->correct-answers#send"}) do |f| %>
        <%= f.input :choice_id,
          collection: [@choices[0].content,
            @choices[1].content,
            @choices[2].content,
            @choices[3].content],
            as: :radio_buttons %>
        <%= f.submit %>
      <% end %>
    <% else %>
      <%= simple_form_for(@user_choice,
          data: {correct_answers_target: "form",
          action: "submit->correct-answers#send"}) do |f| %>
        <%= f.input :choice_id,
          collection: [@answers[0].content,
          @answers[1].content],
          as: :radio_buttons %>
        <%= f.submit %>
      <% end %>
    <% end %>

    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Lifelines
      </button>
      <ul class="dropdown-menu">
      <% if current_user.lifeline_count > 0 %>
        <li><%= link_to "50/50", question_path(@question, :query => "50-50"), class: "dropdown-item" %></li>
        <li><a class="dropdown-item" href="#">Ask a friend</a></li>
        <li><a class="dropdown-item" href="#">Ask the audience</a></li>
        <% else %>
        <li><a class="dropdown-item" href="#">Sorry, you dont have enough tokens!!!</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<p><%= link_to 'home', root_path %></p>
