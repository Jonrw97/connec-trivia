
<div class="cards-question">
<div class="card-question">
  <h4><%= @question.prompt %></h4>
</div>

  <div data-controller="correct-answers">
    <div data-correct-answers-target="answers" class="card-results"></div>
    <div data-correct-answers-target="answersdiv"  class="card-answers">
      <%if params[:query].nil? %>
        <%= simple_form_for(@user_choice,
              data: {correct_answers_target: "form",
            action: "submit->correct-answers#send"}) do |f| %>
          <%= f.input :choice_id,
            collection: [@choices[0].content,
              @choices[1].content,
              @choices[2].content,
              @choices[3].content],
              as: :radio_buttons %>

              <div class="buttons-question">

          <%= f.submit 'Confirm Answer' %>
        <% end %>
      <% else %>
        <%= simple_form_for(@user_choice,
            data: {correct_answers_target: "form",
            action: "submit->correct-answers#send"}) do |f| %>
          <%= f.input :choice_id,
            collection: [@answers[0].content,
            @answers[1].content],
            as: :radio_buttons %>
            <div class="buttons-question">
          <%= f.submit 'Confirm Answer', id: 'confirm-button' %>
        <% end %>
      <% end %>

      <div class="dropdown">
        <button class="dropdown-toggle lifeline" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa-solid fa-heart-pulse"></i>
        </button>
        <ul class="dropdown-menu">
        <% if current_user.lifeline_count > 0 %>
          <li><%= link_to "50/50", question_path(@question, :query => "50-50"), class: "dropdown-item" %></li>
          <li><a class="dropdown-item" href="#">Ask a friend</a></li>
          <li><a class="dropdown-item" href="#">Ask the audience</a></li>
          <% else %>
          <li><a class="dropdown-item" href="#">Sorry, you dont have enough tokens!!!</a></li>
          <% end %>
        </ul>
        </div>
      </div>
    </div>
  </div>
</div>
