<div class= "add-friend">
  <% if @friendship.receiver.photo.attached? %>
    <%= cl_image_tag @friendship.receiver.photo.key, :width=>"60", :height=>"60", :gravity=>"auto", :crop=>"fill", class:"avatar-leaderboard" %>
  <% else %>
    <%= image_tag("https://res.cloudinary.com/dvvbk1j65/image/upload/v1679837891/download_itt7fw.png", :width=>"60", :height=>"60", :gravity=>"auto", :crop=>"fill", class:"avatar-leaderboard") %>
  <% end %>
  <h3><%= @friendship.receiver.username %></h3>
  <i class="fa-solid fa-check"></i>
</div>
