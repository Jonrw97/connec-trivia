<%= form_with url: users_path, method: :get, class: "d-flex mt-2" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a friend"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<br>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="users">
        <% if @users.empty? %>
          <p>Search for a friend</p>
        <% else %>
          <ul>
            <% @users.each do |user| %>
              <h3><%= user.username %></h3>
              <button type="button" class="btn btn-primary btn-sm">Add Friend</button>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
